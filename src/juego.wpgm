import wollok.game.*
import hero.*
import jefe.*
import direcciones.*
import props.*

program juego {

	
	//  estado del game utilizado para testear el boss
	game.title("game")
	game.width(15)
	game.height(12)
	game.boardGround("sc_dungeon_boss_1.png")
	game.addVisual(hero)
	game.addVisual(jefe)
	muroInvisible.crearMuroInvisible(game.height()-4)
	jefe.iniciar()
	keyboard.up().onPressDo({hero.mover(arriba)})
	keyboard.right().onPressDo({hero.mover(derecha)})
	keyboard.left().onPressDo({hero.mover(izquierda)})
	keyboard.down().onPressDo({hero.mover(abajo)})
	keyboard.a().onPressDo({hero.dispararHacia(izquierda)})
	keyboard.w().onPressDo({hero.dispararHacia(arriba)})
	keyboard.d().onPressDo({hero.dispararHacia(derecha)})
	keyboard.s().onPressDo({hero.dispararHacia(abajo)})
	keyboard.o().onPressDo({jefe.recibirDanio(10)})
	game.onCollideDo(jefe, { algo => algo.collision(jefe) })
	game.onCollideDo(hero, { algo => algo.collision(hero) })
	game.start() 
}